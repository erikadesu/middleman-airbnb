<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="container" id="show" >
<%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
  <div class="flat">
    <h3><%= flat.name %></h3>
    <h2><%= flat.description %></h2>
    <p><%= flat.city_name %></p>
  </div>
  <div class="flat-info">
    <p>Rating: <%= flat.rating %> stars</p>
    <% if flat.wifi %>
    <p><%= Free WiFi %></p>
    <% end %>
  </div>
</div>
